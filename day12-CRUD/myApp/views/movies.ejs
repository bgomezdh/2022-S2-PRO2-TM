<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
    <main class="container main-container">
      <ol class="list-group list-group-numbered">
        <% for( let i = 0; i < peliculas.length; i++ ) { %>
          <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                  <div class="fw-bold"><a href="/movies/detalle/<%= peliculas[i].id %>"><%= peliculas[i].title %></a></div>
                    <%= peliculas[i].release_date %>
                  </div>
              <span class="badge bg-primary rounded-pill"><%= peliculas[i].rating %></span>
              <div class="fw-bold m-3"><a href="/movies/update/<%= peliculas[i].id %>">Modificar</a></div>
              <div class="fw-bold m-3">
                <form action="/movies/delete" method="post">
                  <input hidden type="number" name="id" value="<%= peliculas[i].id %>">
                  <button type="submit">Eliminar</button>
                </form></div>
          </li>
        <% } %>
      </ol>
    </main>
  </body>
</html>
